<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sketchproject.infogue.activities.Profile"
    tools:showIn="@layout/activity_profile">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:contentDescription="@string/dummy_content"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_featured_1" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@color/colorLight"
        android:contentDescription="@string/dummy_content"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_avatar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Imelda Dwi Agustine"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:autoLink="all"
        android:text="Jakarta, Indonesia"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:textColor="@color/colorGray"
        android:textColorLink="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/statistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/location"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:id="@+id/btn_article"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/valueArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="345"
                android:textColor="@color/colorDark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/labelArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueArticle"
                android:gravity="center"
                android:text="@string/label_articles"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/colorGray"
            android:contentDescription="@string/dummy_content" />

        <RelativeLayout
            android:id="@+id/btn_followers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/valueFollower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="234"
                android:textColor="@color/colorDark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/labelFollower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueFollower"
                android:gravity="center"
                android:text="@string/label_followers"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/colorGray"
            android:contentDescription="@string/dummy_content" />

        <RelativeLayout
            android:id="@+id/btn_following"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/valueFollowing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="174"
                android:textColor="@color/colorDark"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/labelFollowing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueFollowing"
                android:gravity="center"
                android:text="@string/label_following"
                android:textAllCaps="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statistic"
        android:layout_centerHorizontal="true"
        android:alpha="0.8"
        android:autoLink="all"
        android:gravity="center_horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. ipsum dolor sit amet lo siku l briema li skie zulo."
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:textColor="@color/colorDark"
        android:textColorLink="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_primary"
        android:minHeight="40dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:text="@string/action_view_detail"
        android:textColor="@android:color/white" />

</RelativeLayout>
