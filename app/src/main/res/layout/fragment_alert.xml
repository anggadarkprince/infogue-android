<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/color_success">

    <ImageView
        android:id="@+id/alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:tint="@color/light"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/alert_title"
        android:layout_toRightOf="@id/alert_icon"
        android:layout_toEndOf="@id/alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-medium"
        android:text="Alert Title!"
        android:textColor="@color/light"/>

    <ImageButton
        android:id="@+id/alert_dismiss"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:alpha="0.7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close"
        style="?android:attr/borderlessButtonStyle"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alert_title"
        android:layout_toRightOf="@id/alert_icon"
        android:layout_toEndOf="@id/alert_icon"
        android:textColor="@color/light_transparent"
        android:textSize="13sp"
        android:autoLink="all"
        android:textColorLink="@color/light_transparent"
        android:text="Alert message..."/>
</RelativeLayout>